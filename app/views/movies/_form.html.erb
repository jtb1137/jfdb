<%= form_for @movie do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.label :synopsis %>
    <%= f.text_area :synopsis %><br>
    <%= f.label :mpaa_rating %>
    <%= select(:movie, :mpaa_rating, options_for_select([ 'G', 'PG', 'PG-13', 'R' ]), { include_blank: true }) %><br>
    <%= f.submit %>
<% end %>